[advice]
	detachedHead = false
	statusHints = false
	waitingForEditor = false

[alias]
	wdiff = diff --word-diff

[blame]
	markIgnoredLines = true
	markUnblamableLines = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green
	changed = yellow
	unmerged = red
	untracked = magenta

[commit]
        gpgSign = true

[core]
	autocrlf = input
	editor = nvim
{{- if eq .chezmoi.os "darwin" }}
	ignoreCase = true
{{- end }}
	pager = delta
{{- if eq .chezmoi.os "darwin" }}
	trustctime = false ; play nicely with revisiond
{{- end }}

[credential]
{{- if eq .chezmoi.os "darwin" }}
	helper = osxkeychain
{{- end }}

[delta]
	features = line-numbers
	navigate = true

[diff]
	algorithm = histogram
	colorMoved = default
	indentHeuristic = on
	mnemonicprefix = true
	renames = copies

[diff "ansible-vault"]
	textconv = ansible-vault view

[diff "exiftool"]
	cachetextconv = true
	textconv = exiftool

; [diff "sops"]
; 	textconv = sops --decrypt

[diff "zipinfo"]
	cachetextconv = true
	textconv = zipinfo -lZ

[fetch]
	fsckobjects = true
	prune = true
	pruneTags = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[grep]
	extendedRegexp = true

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only --dark

[log]
	date = human

[merge]
	conflictStyle = diff3
	ff = only
	log = false

[pull]
	rebase = true

[push]
	default = current
	followTags = true

[rebase]
	autoStash = true
	missingCommitsCheck = warn

[receive]
	fsckObjects = true

[rerere]
	enabled = true

[status]
	relativePaths = false
	showStash = true

[tag]
        gpgSign = true

[transfer]
	fsckobjects = true

[user]
	email = {{ .git_email }}
	name = {{ .name }}
	signingKey = {{ .git_signing_key }}
	useConfigOnly = true

