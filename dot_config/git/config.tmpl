[advice]
	detachedHead = false
	statusHints = false
	waitingForEditor = false

[alias]
	wdiff = diff --word-diff

[blame]
	markIgnoredLines = true
	markUnblamableLines = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green
	changed = yellow
	unmerged = red
	untracked = magenta

[core]
	autocrlf = input
	editor = nvim
{{- if eq .chezmoi.os "darwin" }}
	ignoreCase = true
{{- end }}
	pager = delta
{{- if eq .chezmoi.os "darwin" }}
	trustctime = false ; play nicely with revisiond
{{- end }}

[credential]
{{- if eq .chezmoi.os "darwin" }}
	helper = osxkeychain
{{- end }}

[delta]
	; features = side-by-side line-numbers decorations
	features = line-numbers
	navigate = true
	; whitespace-error-style = 22 reverse

; [delta "decorations"]
; 	commit-decoration-style = bold yellow box ul
; 	file-style = bold yellow ul
; 	file-decoration-style = none
; 	navigate = true

[diff]
	algorithm = histogram
	colorMoved = default
	indentHeuristic = on
	mnemonicprefix = true
	renames = copies

[diff "ansible-vault"]
	textconv = ansible-vault view

[diff "exiftool"]
	cachetextconv = true
	textconv = exiftool

[diff "sops"]
	textconv = sops --decrypt

[diff "zipinfo"]
	cachetextconv = true
	textconv = zipinfo -lZ

[fetch]
	fsckobjects = true
	prune = true
	pruneTags = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[gpg]
{{- if eq .chezmoi.os "darwin" }}
	program = {{ .homebrew_prefix }}/MacGPG2/bin/gpg2
{{- end }}

[grep]
	extendedRegexp = true

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only --dark

[log]
	date = human

[merge]
	conflictStyle = zdiff3
	ff = only
	log = false

[pull]
	rebase = true

[push]
	default = current
	followTags = true

[rebase]
	autoStash = true
	missingCommitsCheck = warn

[receive]
	fsckObjects = true

[rerere]
	enabled = true

[status]
	relativePaths = false
	showStash = true

[transfer]
	fsckobjects = true

[trim]
	bases = main,master
	protected = bugfix/*,docs/*,releases/*,sync

[user]
	name = "Nick Osborn"
	useConfigOnly = true

[includeIf "gitdir:~/.local/share/chezmoi/"]
	path = config.personal

[includeIf "gitdir:~/src/github.com/hyphengroup/"]
	path = config.work

[includeIf "gitdir:~/src/github.com/nosborn/"]
	path = config.personal

