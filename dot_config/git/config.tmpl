[advice]
	detachedHead = false
	statusHints = false
	waitingForEditor = false

[alias]
	fixup = !git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup
	wdiff = diff --word-diff

[blame]
	markIgnoredLines = true
	markUnblamableLines = true

[color]
	ui = auto

[commit]
{{- if ne "" .git.signingKey }}
	gpgSign = true
{{- end }}

[core]
	autocrlf = input
	editor = nvim
{{- if eq .chezmoi.os "darwin" }}
	ignoreCase = true
{{- end }}
	pager = delta
{{- if eq .chezmoi.os "darwin" }}
	trustctime = false ; play nicely with revisiond
{{- end }}

[credential]
{{- if eq .chezmoi.os "darwin" }}
	helper = osxkeychain
{{- end }}

[delta]
	features = navigation
	light = false
	side-by-side = true

[delta "decorations"]
	commit-decoration-style = blue ol
	commit-style = raw
	file-style = omit
	hunk-header-decoration-style = blue box
	hunk-header-file-style = red
	hunk-header-line-number-style = "#067a00"
	hunk-header-style = file line-number syntax

[delta "interactive"]
	keep-plus-minus-markers = true

[diff]
	external = difft
	; algorithm = histogram
	; colorMoved = default
	; mnemonicprefix = true
	; renames = copies

[diff "ansible-vault"]
	textconv = ansible-vault view

[diff "exiftool"]
	cachetextconv = true
	textconv = exiftool

[diff "sops"]
	textconv = sops --config /dev/null --decrypt --ignore-mac

[diff "zipinfo"]
	cachetextconv = true
	textconv = zipinfo -lZ

[fetch]
	fsckobjects = true
	prune = true
	; pruneTags = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	process = git-lfs filter-process
	required = true
	smudge = git-lfs smudge -- %f

[grep]
	patternType = "extended"

[include]
	path = ~/.local/share/nvim/lazy/tokyonight.nvim/extras/delta/tokyonight_night.gitconfig

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only --features=interactive

[log]
	date = human

[merge]
	conflictStyle = diff3
	ff = only

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = upstream
	; followTags = true
	useForceIfIncludes = true

[rebase]
	autoSquash = true
	autoStash = true
	missingCommitsCheck = warn

[receive]
	fsckObjects = true

[rerere]
	enabled = true

[status]
	relativePaths = false
	showStash = true

[tag]
{{- if ne "" .git.signingKey }}
	gpgSign = true
{{- end }}

[transfer]
	fsckobjects = true

[url "https://github.com/"]
	insteadOf = git@github.com:

[url "https://github.com/"]
	insteadOf = github.com:

[user]
	email = {{ .git.email }}
	name = {{ .name }}
{{- if ne "" .git.signingKey }}
	signingKey = {{ .git.signingKey }}
{{- end }}
	useConfigOnly = true

