// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_update": false,
  "buffer_font_fallbacks": [
    "Nerd Font"
  ],
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 15,
  "chat_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "cursor_shape": "block",
  "file_types": {
    "JSONC": [
      "**/.vscode/**/*.json",
      "**/.zed/**/*.json",
      "**/Zed/**/*.json",
      "**/zed/**/*.json"
    ],
    "Plain Text": [
      "txt"
    ],
    "Shell Script": [
      ".env.*"
    ]
  },
  "node": {
    "npm_path": "/opt/homebrew/bin/npm",
    "path": "/opt/homebrew/bin/node"
  },
  "show_call_status_button": false,
  "tabs": {
    "git_status": true,
    "show_diagnostics": "all"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_features": {
      "calt": false
    }
  },
  "theme": {
    "dark": "One Dark",
    "light": "One Light",
    "mode": "system"
  },
  "ui_font_fallbacks": [
    "Nerd Font",
  ],
  "ui_font_size": 16,
  "vim_mode": true
}
