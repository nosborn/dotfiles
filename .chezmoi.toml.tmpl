{{- $bitbucketTeam := promptStringOnce .bitbucket "team" "bitbucket.team" -}}
{{- $gitEmail := promptStringOnce .git "email" "git.email" -}}
{{- $gitSigningKey := promptStringOnce .git "signingKey" "git.signingKey" -}}
{{- $githubOrg := promptStringOnce .github "org" "github.org" -}}
{{- $githubUser := promptStringOnce .github "user" "github.user" -}}
{{- $where := promptStringOnce . "where" "where" -}}

[data]
name = "Nick Osborn"
where = "{{ $where }}"

[data.bitbucket]
team = "{{ $bitbucketTeam }}"

[data.git]
email = "{{ $gitEmail }}"
signingKey = "{{ $gitSigningKey }}"

[data.github]
org = "{{ $githubOrg }}"
user = "{{ $githubUser }}"

[data.homebrew]
prefix = "{{ if eq .chezmoi.arch "arm64" }}/opt/homebrew{{ else }}/usr/local{{ end }}"

[diff]
pager = "less -R"

[git]
autoCommit = true
autoPush = true
